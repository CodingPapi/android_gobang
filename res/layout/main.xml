<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <com.example.five.ChessBoardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff999999"
            android:id="@+id/chessboard">
    </com.example.five.ChessBoardView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:weightSum="4"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal|bottom">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:layout_weight="1"
                android:id="@+id/button_start" android:layout_gravity="bottom"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop"
                android:id="@+id/button_stop" android:layout_gravity="bottom"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:layout_weight="1"
                android:id="@+id/button_reset" android:layout_gravity="bottom"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regress"
                android:layout_weight="1"
                android:id="@+id/button_regress" android:layout_gravity="bottom"/>

    </LinearLayout>

</FrameLayout>

